# PRISM ML Environment Configuration
# Copy this file to .env and update with your settings

# Project Paths
PROJECT_ROOT=.
DATA_DIR=./data
MODELS_DIR=./models
LOGS_DIR=./logs

# Data Paths
RAW_DATA_PATH=./data/raw/phishing_urls.csv
PROCESSED_DATA_PATH=./data/processed/processed_data.npz
TRAIN_DATA_PATH=./data/processed/train.csv
TEST_DATA_PATH=./data/processed/test.csv

# Model Configuration
MODEL_TYPE=ensemble  # Options: ensemble, random_forest, logistic_regression
RANDOM_STATE=42
TEST_SIZE=0.2
VALIDATION_SIZE=0.1

# Training Configuration
N_ESTIMATORS=100
MAX_DEPTH=20
MIN_SAMPLES_SPLIT=5
MIN_SAMPLES_LEAF=2
CLASS_WEIGHT=balanced

# Feature Extraction
MAX_URL_LENGTH=200
MIN_DOMAIN_LENGTH=3
EXTRACT_WHOIS=false
USE_CACHE=true

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=detailed  # Options: simple, detailed, json

# Performance
N_JOBS=-1  # Number of parallel jobs (-1 = use all cores)
BATCH_SIZE=1000

# Model Export
EXPORT_TFJS=true
TFJS_OUTPUT_DIR=./models/tfjs

# API Configuration (for future integration)
API_ENABLED=false
API_HOST=localhost
API_PORT=5000
